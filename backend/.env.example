# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# TODO: Replace with your MongoDB connection string
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017/portfolio
MONGODB_URI=mongodb://localhost:27017/portfolio

# JWT Secret for Authentication
# TODO: Generate a strong random secret (e.g., using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# JWT Expiration
JWT_EXPIRE=7d

# Admin Credentials
# TODO: Set your admin username and a strong password
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Admin Access Path (for security through obscurity)
# TODO: Change these to your custom values (e.g., ADMIN_PATH=divyam, ADMIN_PASSWORD_PATH=pswd)
# The admin login will be accessible at: http://localhost:5000/divyam/pswd
ADMIN_PATH=divyam
ADMIN_PASSWORD_PATH=pswd

# CORS Configuration
# TODO: Add your frontend URL(s) separated by commas
# For development: http://localhost:3000
# For production: https://your-portfolio.vercel.app
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional - for contact form)
# TODO: Configure if you want email notifications for contact form submissions
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_TO=your-email@gmail.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

